<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">


    <TextView
        android:layout_alignParentStart="true"
        android:id="@+id/receiver_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:fontFamily="@font/montserrat_medium"
        android:padding="@dimen/_15sdp"
        android:text="Hi. How are you? Some random text here and here. I need spend more time for android dev"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/message_tail"
        android:layout_below="@+id/receiver_message_body"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/left_leg"
        />




</RelativeLayout>