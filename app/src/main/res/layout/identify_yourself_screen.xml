<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#131313">




<RelativeLayout
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/back_button"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="13dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_20sdp"
        app:cardBackgroundColor="#1E1E1E">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/arrow_back"
            android:layout_gravity="center"
            />




    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/back_button"
        android:text="Identify Yourself"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_extra_bold"
        android:textSize="@dimen/_11sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_14sdp"/>
</RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/_40sdp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnLawyer"
            android:layout_width="@dimen/_110sdp"
            android:clickable="true"
            android:focusable="true"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            app:cardBackgroundColor="#1E1E1E"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/_13sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_minus15sdp"


                >

                <ImageView
                    android:id="@+id/lawyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"

                    android:contentDescription="TODO"
                    android:src="@drawable/lawyer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lawyer"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Lawyer"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnClient"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            app:cardBackgroundColor="#1E1E1E"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/_13sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_minus15sdp">

                <ImageView
                    android:id="@+id/client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"

                    android:contentDescription="TODO"
                    android:src="@drawable/client_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/client"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_50sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Client"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/black_suits_vertical_text"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_minus8sdp"
            />



</RelativeLayout>

