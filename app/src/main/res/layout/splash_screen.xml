<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313">


    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_70sdp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="@dimen/_70sdp"
        android:layout_marginBottom="@dimen/_34sdp"
        android:src="@drawable/main_icon"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEGAL CONNECT"
        android:textColor="@color/white"
        android:layout_below="@+id/iconImageView"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_28sdp"
        android:fontFamily="@font/montserrat_extra_bold"
        android:textStyle="bold"/>


    <ImageView
        android:layout_width="@dimen/_600sdp"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_minus6sdp"
        android:layout_marginTop="@dimen/_29sdp"
        android:layout_marginBottom="@dimen/_minus17sdp"
        android:src="@drawable/statue" />

    <TextView
        android:id="@+id/btnContinue"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/montserrat_more_than_regular"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:drawableRight="@drawable/arrow_forward"
        android:drawablePadding="@dimen/_7sdp"

        />





</RelativeLayout>