<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_alignParentEnd="true"
        android:id="@+id/sender_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:padding="@dimen/_15sdp"
        android:fontFamily="@font/montserrat_medium"
        android:text="Hi. How are you? Some random text here and here. I need spend more time for android dev"
        android:textColor="@android:color/white"
        />


    <ImageView
        android:id="@+id/message_tail"
        android:layout_below="@+id/sender_message_body"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10sdp"
        android:src="@drawable/right_leg"
        />




</RelativeLayout>